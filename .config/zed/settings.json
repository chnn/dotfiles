{
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "version": "2"
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15,
  "buffer_font_weight": 300,
  "collaboration_panel": { "button": false },
  "copilot": { "disabled_globs": ["*.md", "*.txt"] },
  "cursor_blink": false,
  "edit_predictions": {
    "disabled_globs": ["*.md", "*.txt"],
    "mode": "subtle"
  },
  "features": { "edit_prediction_provider": "zed" },
  "git": { "inline_blame": { "enabled": false } },
  "gutter": { "code_actions": false },
  "indent_guides": { "enabled": false },
  "languages": {
    "TypeScript": {
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "TSX": {
      "language_servers": ["typescript-language-server", "!vtsls"]
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "nodePath": ".yarn/sdks",
        "rulesCustomizations": [
          // Disable annoying autofixable rules
          { "rule": "prettier/prettier", "severity": "off" },
          { "rule": "arca/import-ordering", "severity": "off" },
          { "rule": "arca/newline-after-import-section", "severity": "off" },
          {
            "rule": "@typescript-eslint/consistent-type-imports",
            "severity": "off"
          },
          { "rule": "quotes", "severity": "off" },
          { "rule": "import/no-duplicates", "severity": "off" },
          { "rule": "unused-imports/no-unused-imports", "severity": "off" }
        ]
      }
    },
    "vtsls": {
      "settings": {
        "vtsls": {
          "autoUseWorkspaceTsdk": true
        },
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "non-relative"
          }
        }
      }
    }
  },
  "tab_bar": { "show": true },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_size": 15,
    "font_family": "JetBrainsMono Nerd Font",
    "font_weight": 300
  },
  "theme": "Melange Light",
  "toolbar": {
    "quick_actions": true,
    "breadcrumbs": false,
    "selections_menu": true
  },
  "ui_font_family": ".SystemUIFont",
  "ui_font_size": 16,
  "vim": { "use_system_clipboard": "never" },
  "vim_mode": true
}
