# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = false
        interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: %essid"
        format_down = "W: down"
}

battery all {
        format = "%status %percentage %remaining"
        integer_battery_capacity = true
        hide_seconds = true
        status_bat = "B:"
        status_chr = "Charging"
        status_full = "Full"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "%1min"
}

volume master {
        format = "V: %volume"
        format_muted = "V: M"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
